{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES6"],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "outDir": "lib",
    "allowJs": true,
    "isolatedModules": true
  },
  "include": ["src/**/*.js", "types/**/*.ts"]
}
