{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ES6"],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "outDir": "lib",
    "declaration": true,
    "declarationDir": "types",
    "isolatedModules": true
  },
  "include": ["src/**/*.ts"]
}
